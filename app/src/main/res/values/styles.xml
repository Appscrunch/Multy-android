<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="SeedButtonContinue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SeedTimeImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
    </style>

    <style name="SeedTipText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SeedControlPhraseText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SeedTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="BrickList">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">36dp</item>
    </style>

    <style name="ButtonCancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NoTitleTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BlackMediumText">
        <item name="android:textColor">@color/common_google_signin_btn_text_dark_focused</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabInactiveText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#87a1c5</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ArrowSmall">
        <item name="android:layout_width">@dimen/arrow_size</item>
        <item name="android:layout_height">@dimen/arrow_size</item>
        <item name="android:src">@drawable/ic_arrow_right_grey</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
    </style>

    <style name="ButtonNext" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/btn_gradient_blue</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShareButton" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">@dimen/share_btn_width</item>
        <item name="android:layout_height">@dimen/share_btn_height</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="SendShareButton" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">@dimen/share_btn_width</item>
        <item name="android:layout_height">@dimen/send_btn_height</item>
        <item name="android:elevation">@dimen/elevation_6dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="Send" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="TransactionTextBlue">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#87a1c5</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DividerCreateWallet">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">#e0e3ea</item>
    </style>

    <style name="ButtonChooserCreateWallet">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TitleChooserCreateWallet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextChooserCreateWallet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
